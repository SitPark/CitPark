<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitPark.ParksListModal">
    <ContentPage.Content>
        <ListView x:Name="parksListView" ItemsSource="{Binding ParksList}" ItemSelected="parksListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Image x:Name="ParkImage" HeightRequest="100" Source="{Binding Details.Image}" Grid.Column="0" />
                            <Label Text="{Binding Name}" Grid.Column="1" />
                            <Button Text="Navigate" Grid.Column="2" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>